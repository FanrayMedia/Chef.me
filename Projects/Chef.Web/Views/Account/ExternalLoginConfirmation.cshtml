@model Chef.Web.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
    var jsonModelStr = Chef.WebHelper.ToJson(Model);
}
<h2>@ViewBag.Title.</h2>
<h3>Associate your @ViewBag.LoginProvider account.</h3>

<form action="/Account/ExternalLoginConfirmation" method="post"
      class="form-horizontal jumbotron col-xs-12 col-sm-6 col-md-5"
      name="registerForm" role="form" id="registerForm"
      ng-controller="registerController"
      ng-init="vm=@jsonModelStr"
      novalidate>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <p style="font-size:smaller">
        You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
        Please enter a user name for this site below and click the Register button to finish
        logging in.
    </p>

    <div class="form-group">
        <label for="userName">Select a Chef.me username (a-z,A-Z,0-9)</label>
        <div class="username-fieldhint">chef.me/</div>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "padding-left:91px;" })
    </div>

    <div class="form-group">
        <label for="FirstName">First Name</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" ng-model="vm.location"
               name="location" id="location" type="text" maxlength="45"
               typeahead="address for address in getLocation($viewValue)"
               required>
    </div>

    @*<div class="form-group">
        <label for="Location">Location</label>
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
    </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
</form>



